                    <p><img src={{ media.source }} alt={{media.alt}} class="img_produits"/> </p>

                {% endfor %}

                <p>{{ produit.nom }}</p>
                <p>{{ produit.interprete }}</p>
                <p>{{ produit.prixUnitaire }} â‚¬</p>
                <p>{{ produit.disponibilite ? 'Yes' : 'No' }}</p>
                <p>{{ produit.TypeCategorie }}</p>

                <button> Ajouter au panier </button>
            </div>

        {% endfor %}
    </div>

{% endblock %}
